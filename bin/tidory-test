#!/usr/bin/env node
/* eslint-disable no-console */

const shelljs = require('shelljs')
const path = require('path');

const wd = process.cwd();

const _cross_env = path.join(__dirname, '../node_modules/cross-env/dist/bin/cross-env.js');
const _qunit = path.join(__dirname, '../node_modules/qunit/bin/qunit');

shelljs.exec(`node ${_cross_env} NODE_ENV=test ${_qunit} \'test/QUnit-tidory-*.js\'`);